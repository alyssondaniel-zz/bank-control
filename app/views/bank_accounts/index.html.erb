<p id="notice"><%= notice %></p>

<h1>Accounts</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Agency</th>
      <th>Number</th>
      <th>Limit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bank_accounts.each do |bank_account| %>
      <tr>
        <td><%= bank_account.bank_agency.number %></td>
        <td><%= bank_account.number %></td>
        <td><%= bank_account.limit %></td>
        <td><%= link_to 'Show', bank_account %></td>
        <td><%= link_to 'Edit', edit_bank_account_path(bank_account) %></td>
        <td><%= link_to 'Destroy', bank_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

